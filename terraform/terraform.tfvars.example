# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# EC2 Configuration
instance_type     = "t3.medium"  # Adjust based on workload
root_volume_size  = 30

# SSH Access
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/cloudmesh_worker
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQD... your-public-key-here"

# Restrict SSH access to your IP (recommended)
allowed_ssh_cidrs = ["YOUR.IP.ADDRESS/32"]

# Solana Configuration
solana_rpc_url = "https://api.mainnet-beta.solana.com"
# OR for devnet: "https://api.devnet.solana.com"
# OR for your own RPC: "https://your-rpc-endpoint.com"

program_id = "2pbdwB29EXvsfEcigJrMwEaDx2T16zZ47aK5oGabjx7S"

# Secrets (DO NOT COMMIT THESE!)
# Get from your worker-keypair.json file
worker_keypair_json = <<EOF
[YOUR,WORKER,KEYPAIR,ARRAY,HERE]
EOF

# Get from Pinata dashboard
pinata_jwt = "your-pinata-jwt-token-here"

# Logging
log_retention_days = 30

# Monitoring
enable_monitoring = true

# Auto-scaling (optional)
auto_scaling_enabled = false
min_workers         = 1
max_workers         = 3
